<!-- form_with - хелпер, який генерує HTML-код форми вводу даних, звідки параметри (commenter, body) потрапляють в CommentsController в comment_params -->
<!---form_with використовує масив, який побудує вкладений маршрут (/articles/1/comments) -->

<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
