<!-- form_with - хелпер, який генерує HTML-код форми вводу даних, звідки параметри (commenter, body) потрапляють в CommentsController в comment_params -->
<!---form_with використовує масив, який побудує вкладений маршрут (/posts/1/comments) -->

<%= form_with model: [ @post, @post.comments.build ] do |form| %>

  <div class="mb-3 row">
    <%= form.label :commenter %><br>
    <div class="col-sm-10">
      <%= form.text_field :commenter %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :body %><br>
    <div class="col-sm-10">
    <%= form.text_area :body %>
    </div>
  </div>
  <p>
    <%= form.submit  "Submit!", class: 'btn btn-primary'%>
  </p>
<% end %>
