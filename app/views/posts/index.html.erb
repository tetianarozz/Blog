<div class="container">
  <div class="row justify-content-between">
    <div class="col-2">
      <h1 class="">Posts</h1>
    </div>
    <div class="col-2">
      <%= link_to "New post", new_post_path, class: "btn btn-primary" %>
    </div>
  </div>
  <% @posts.each do |post| %>
    <article class="card mt-3">
      <div class="card-body">
        <h4><%= post.title %></h4>

        <section class="card-text">
          <time datetime="<%= post.formatted_created_at %>">
            <small><%= post.formatted_created_at %></small>
          </time>

          <p class="my-2">
            <%= post.body %>
          </p>
        </section>

        <%= link_to 'Show', post_path(post), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
        <%= link_to 'Destroy', post_path(post), class: 'btn btn-danger',
                    data: {method: :delete, confirm: 'Are you sure?'} %>

        <p class="text-end"> <i class="far fa-eye"><span class="mx-1"><%= post.impressionist_count(:filter=>:ip_address)%></span></i> watching </p>

      </div>
    </article>
  <% end %>

</div>
