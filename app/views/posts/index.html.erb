<h2>Posts</h2>

<% @posts.each do |post| %>
  <h2><%= post.title %></h2>

  <time datetime="<%= post.formatted_created_at %>">
    <%= post.formatted_created_at %>
  </time>

  <p>
    <%= post.body %>
    <br>
    <%= link_to 'Show', post_path(post) %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post_path(post), data: {method: :delete, confirm: 'Are you sure?'} %>
  </p>
<% end %>
