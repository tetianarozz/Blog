<div class="card-body mb-5 shadow-sm bg-light ">
  <h1 class="mb-4, text-center "> <%= @post.title %></h1>

  <figure class="text-start">
    <blockquote class="blockquote">
      <time datetime="<%= @post.formatted_created_at %>">
        <%= @post.formatted_created_at %>
      </time>
    </blockquote>
  </figure>

    <p class="text-center, text-md-start, fs-4 shadow-sm bg-white rounded">
      <%= @post.body %>
    </p>

  <%= link_to 'Show', post_path(@post), class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', post_path(@post), class: 'btn btn-danger',
    data: {method: :delete, confirm: 'Are you sure?'} %>

  <%= button_to 'Like', post_likes_path(@post), method: :post %>

  <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
  <% if pre_like %>
    <%= button_to 'Unlike', post_like_path(@post, pre_like), method: :delete %>
  <% else %>
    <%= button_to 'Like', post_likes_path(@post), method: :post %>
  <% end %>

  <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
</div>

<!-- показ коментів-->
<!-- Метод render перебирає @post.comments і візуалізує паршал з коментом-->
<!-- (через присвоєння кожному коменту локальної змінної з таким же іменем, як і паршал (comment), який потім стає доступним в паршалі)-->
<div class="p-2 mt-3 bg-light text-black ">
  <h3 class="mt-4, text-center">Comments:</h3>
</div>
<div class="p-3 mb-2 bg-light text-dark">
  <%= render @post.comments %>
</div>

