<div class="text-center mt-5 mb-5">
  <h1 >Welcome!</h1>

  <% if logged_in? %>

    <h1>You are Logged In, <%= current_user.first_name %></h1>

  <%else %>

    <h1>Create an Account or Sign In to create new posts and add comments</h1>
</div>

  <div class="d-grid gap-2 col-3 mx-auto mt-5">
    <%= link_to 'Sign in', login_path, class: 'btn btn-info btn-lg ' %>
    <%= link_to 'Create account', new_user_path, class: 'btn btn-primary btn-lg' %>
  </div>

<%end%>
